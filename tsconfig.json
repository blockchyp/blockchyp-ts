{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es2015", "dom" ],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
  },
  "include": [
    "index.ts",
    "src/*.ts",
    "itest/**/*.ts",
    "spec/*.ts"
  ],
  "compineOneSave": false,
  "buildOnSave": false
}
