{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap":true,
    // "outDir": "./dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "index.ts",
    "src/*.ts",
    "itest/**/*.ts",
    "spec/*.ts"
  ]
}
